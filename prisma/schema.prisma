generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  EMPLOYEE
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique @db.VarChar(255)
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique @db.VarChar(255)
  phone     String   @unique @db.VarChar(20)
  company   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
